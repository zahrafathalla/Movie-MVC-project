@model Movie

@{
    ViewData["Titel"] = Model.Title;
}

<div class="row  mt-60-px">
    <div class="col-md-3">
        <img src="data:image\/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" /alt ="@Model.Title">
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3> @Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"> </i>
                <span class="text-muted"> @Model.Rate.ToString("0.0") </span>
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.year
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Genre.Name
        </span>
        <p class="text-justify mt-3">@Model.StoryLine</p>
        <span>
            <a asp-action="Index" class="btn btn-outline-secondary mt-4"> <i class="bi bi-arrow-left-circle"></i> Back to movies </a>
        </span>
    </div>
    
</div>